    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:context="fffb.moments.app.MainActivity"
        android:background="#ffffffff">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/add_text"
                android:src="@drawable/ic_add_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/add_image"
                android:layout_weight="1"
                android:onClick="addText"
                android:padding="10dp"
                android:background="#ffc8ffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/add_image"
                android:src="@drawable/ic_photo_camera_black_24dp"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:layout_weight="1"
                android:onClick="addImage"
                android:background="#ffc8ffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/add_link"
                android:src="@drawable/ic_insert_link_black_24dp"
                android:layout_alignTop="@+id/add_image"
                android:layout_toRightOf="@+id/add_image"
                android:layout_weight="1"
                android:onClick="addLink"
                android:padding="10dp"
                android:background="#ffc8ffff"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

        </LinearLayout>
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jar"
            android:onClick="openJar"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="40dp"
            android:src="@drawable/jarweb"/>

    </LinearLayout>
